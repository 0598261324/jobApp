<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="4dp"
    android:layout_margin="20dp"
    android:background="#FFFFFF">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="#F0EEEE"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="1">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/earth"
                    android:drawablePadding="6dp"
                    android:text="30 min"
                    android:textColor="#1D1D1D"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="33dp"
                    android:src="@drawable/favorite2"
                    android:layout_marginStart="200dp">

                </ImageView>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="36dp"
                    android:src="@drawable/favorite1"
                    >

                </ImageView>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="40dp"
                    android:src="@drawable/stars2"
                    >

                </ImageView>


            </LinearLayout>

        </LinearLayout>


        <!-- ✅ Top Row: Time + icons (fixed) -->

        <!-- ✅ Badge Row -->


        <!-- Icons -->


        <!-- Job Title -->
        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="8dp"
            android:text="Web and Mobile Development"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Company Info -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgCompany"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_company" />

            <TextView
                android:id="@+id/txtCompany"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PURE for IT Solutions"
                android:textColor="#1D1D1D"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="94dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgShare"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/share2" />

                <ImageView
                    android:id="@+id/imgBookmark"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/bookmark" />


            </LinearLayout>
        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="8dp"
            android:columnCount="2"
            android:columnOrderPreserved="false"
            android:padding="8dp"
            android:rowCount="2">

            <!-- الزر 1 -->
            <TextView
                android:id="@+id/txtField"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:background="@drawable/text_background"
                android:drawableStart="@drawable/track"
                android:drawablePadding="8dp"
                android:gravity="center_vertical|start"
                android:paddingStart="16dp"
                android:text="Engineering"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <!-- الزر 2 -->
            <TextView
                android:id="@+id/txtSalary"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:background="@drawable/text_background"
                android:drawableStart="@drawable/income"
                android:drawablePadding="8dp"
                android:gravity="center_vertical|start"
                android:paddingStart="16dp"
                android:text="100$ - 250$"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <!-- الزر 3 -->
            <TextView
                android:id="@+id/txtExperience"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:background="@drawable/text_background"
                android:drawableStart="@drawable/review"
                android:drawablePadding="8dp"
                android:gravity="center_vertical|start"
                android:paddingStart="16dp"
                android:text="3 years"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <!-- الزر 4 -->
            <TextView
                android:id="@+id/txtRemaining"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:background="@drawable/text_background"
                android:drawableStart="@drawable/clock1"
                android:drawablePadding="8dp"
                android:gravity="center_vertical|start"
                android:paddingStart="16dp"
                android:text="3 days rem."
                android:textColor="@color/black"
                android:textSize="13sp" />
        </GridLayout>

